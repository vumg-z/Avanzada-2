/**
 *
 * @author Departamento
 */
public class CilindroConCirculo {
    private Circulo circuloInterno;
    private float altura;
    
    public float calcularArea(){
        return (circuloInterno.calcularArea() * 2) + (2 * (3.14*circuloInterno.radio * altura));
    }
    
    public flat calcularVolumen(){
        return circuloInterno.calcularArea() * altura;
    }
}
